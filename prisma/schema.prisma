generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       BigInt @id @default(autoincrement())
  login    String
  password String
  pKey     String

  User_Infos            User_infos?    @relation("infos")
  User_contacts         User_contacts? @relation("user")
  User_contacts_contact User_contacts? @relation("contact")
}

model User_infos {
  id         BigInt   @id @default(autoincrement())
  userId     BigInt   @unique
  user       Users    @relation(name: "infos", fields: [userId], references: [id])
  name       String
  last_name  String
  status     String   @default("")
  rating     Float    @default(0.0)
  avatar     String
  lastOnline DateTime @default(now())
  online     Boolean  @default(false)
  date_birth DateTime
}

model User_contacts {
  id        BigInt @id @default(autoincrement())
  userId    BigInt @unique
  user      Users  @relation(name: "user", fields: [userId], references: [id])
  contactId BigInt @unique
  contact   Users  @relation(name: "contact", fields: [contactId], references: [id])
}
